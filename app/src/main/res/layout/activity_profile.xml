<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff">

    <!-- Profile Information -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Profile Picture and Name -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

            <!-- Profile Picture -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_person_1"
                android:background="#FBFBFB"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"/>

            <!-- Name and Edit Button -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <!-- Name -->
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sahin Chowdhury"
                    android:textColor="@color/black"
                    android:textSize="24sp"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sm21mtech12002@iith.ac.in"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <!-- Edit Button -->
                <ImageButton
                    android:id="@+id/edit_profile_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Edit Profile"
                    android:background="@color/white"
                    android:src="@drawable/ic_edit" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bio -->
        <TextView
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="25dp"
            android:text="This is my bio. I'm a software developer and I love to code."
            android:layout_marginTop="16dp"/>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#438E04"
            android:layout_marginTop="16dp"/>



        <!-- List of Posts -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerposts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/row_posts"
            android:layout_below="@id/linearLayout" />


    </LinearLayout>

</ScrollView>
